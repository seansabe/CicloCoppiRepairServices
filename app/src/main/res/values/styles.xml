<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RepairServiceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>
        <item name="materialButtonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="colorOnSurface">@color/blue</item>
        <item name="android:background">@drawable/button_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <!-- Add other custom properties for the enabled state -->
    </style>

    <style name="ButtonTextNoCaps" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorSurface">@color/blue</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue</item>
    </style>

    <style name="ThemeOverlay.App.TimePicker" parent="@style/ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorSurface">@color/blue</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue</item>
        <item name="colorTertiaryContainer">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/blue</item>
        <item name="colorOutline">@color/white</item>
        <item name="chipStyle">@style/TimePicker.Chip</item>
    </style>

    <style name="TimePicker.Chip" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>